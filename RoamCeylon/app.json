{
  "expo": {
    "name": "RoamCeylon",
    "slug": "RoamCeylon",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/RoamCeylon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses your location to show nearby places and help you plan your journey around Sri Lanka.",
        "NSLocationAlwaysUsageDescription": "This app uses your location to provide better travel recommendations even when the app is in the background."
      },
      "bundleIdentifier": "com.anonymous.RoamCeylon"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/RoamCeylon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "INTERNET",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "package": "com.anonymous.RoamCeylon"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      [
        "@rnmapbox/maps",
        {
          "RNMapboxMapsImpl": "mapbox",
          "RNMapboxMapsVersion": "10.19.0"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow RoamCeylon to use your location."
        }
      ],
      "@react-native-community/datetimepicker"
    ],
    "extra": {
      "eas": {
        "projectId": "b8cee23e-c523-4302-b1ca-169331200d13"
      }
    }
  }
}
