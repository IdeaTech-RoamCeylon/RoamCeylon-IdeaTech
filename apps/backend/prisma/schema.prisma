generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [citext(schema: "public"), postgis, vector]
}

model DriverLocation {
  id        Int                     @id @default(autoincrement())
  driverId  String
  location  Unsupported("geometry")
  updatedAt DateTime

  @@index([location], name: "driver_location_idx", type: Gist)
  @@index([driverId], name: "driver_id_idx")
}

model RideRequest {
  id             Int                     @id @default(autoincrement())
  passengerId    String
  pickupLocation Unsupported("geometry")
  destination    Unsupported("geometry")
  status         String
  createdAt      DateTime                @default(now())

  @@index([pickupLocation], name: "ride_request_pickup_idx", type: Gist)
  @@index([destination], name: "ride_request_dest_idx", type: Gist)
  @@index([passengerId], name: "ride_request_passenger_idx")
  @@index([status], name: "ride_request_status_idx")
}

model SystemMetadata {
  key       String   @id
  value     String
  updatedAt DateTime
}

model User {
  id          String    @id @default(uuid())
  phoneNumber String    @unique @map("phone")
  name        String?
  createdAt   DateTime  @default(now())
  email       String?
  birthday    DateTime?
  gender      String?
  updatedAt   DateTime  @default(now()) @updatedAt
}

model embeddings {
  id         Int                    @id @default(autoincrement())
  embedding  Unsupported("vector")?
  created_at DateTime               @default(now())
  content    String?
  title      String?

  @@index([title], name: "embeddings_title_idx")
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model spatial_ref_sys {
  srid      Int     @id
  auth_name String? @db.VarChar(256)
  auth_srid Int?
  srtext    String? @db.VarChar(2048)
  proj4text String? @db.VarChar(2048)
}

model SavedTrip {
  id          Int      @id @default(autoincrement())
  userId      String
  name        String
  destination String
  startDate   DateTime
  endDate     DateTime
  itinerary   Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId, createdAt])
}

model TransportSession {
  id             String   @id @default(uuid())
  passengerId    String
  driverId       String?
  status         String
  pickupLocation Json
  destination    Json
  fare           Decimal?
  startTime      DateTime @default(now())
  endTime        DateTime?
  
  @@index([passengerId])
  @@index([driverId])
  @@index([status])
}

model PlannerMetadata {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     Json
  updatedAt DateTime @updatedAt
}
